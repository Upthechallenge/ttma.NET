<section id="job">
    <div class="job-wrapper">
        <div class="container">
            <div class="row">

                <p>
                    <div id="message" style="display: none" class="alert alert-success" role="alert">
                        Load markers using Geocoding
                        completed !!!
                    </div>
                    <div class="progress">
                        <div id="progressBar" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>


                    @{




                        Html.GoogleMap()
                    .Name("map")
                    .Height(600)
                    .Center(c => c.UseCurrentPosition()
                                            //this will be the Latitude if your map do not support
                                            //geolocation or the client denies the location sharing
                                            .Latitude(23d)
                                            //this will be the Longitude if your map do not support
                                            //geolocation or the client denies the location sharing
                                            .Longitude(-82.3d)

                                            )

                    .ClientEvents(e =>
                        e.OnMarkersGeocodingCompleted("MarkerFromAddressCompleted")
                         .OnMarkersGeocodingProgress("OnProgress")
                    )
                    .MarkersGeocoding(true)
                    .BindTo<HotelViewModel, Marker>
                    (Model, mappings => mappings.For<HotelViewModel>
                        (
                            binding => binding.ItemDataBound
                                (
                                    (marker, hotel) =>
                                    {
                                        marker.Address = hotel.adressbylonlat;

                                        marker.Title = hotel.name;
                                        marker.Window = new InfoWindow(marker)


                                        {
                                            Template =
                                            {
                                    Content = () => ViewContext.Writer.Write(hotel.name)

                                            }
                                        };
                                    }
                                )
                        )
                    )
                    .FitToMarkersBounds(true)
                    .Render();
                    }
                    @section Scripts{
                        <script type="text/javascript">
                            function MarkerFromAddressCompleted(args) {
                                $('#message').show();
                            }
                            function OnProgress(args) {
                                var strValue = args.value + '%';
                                $('#progressBar').css({ width: strValue });
                                $('#progressBar').text(strValue);
                                if (args.status !== google.maps.GeocoderStatus.OK) {
                                    alert("Error loading address " + args.address + ". Reason: " + args.status);
                                }
                            }
                        </script>
                    }

