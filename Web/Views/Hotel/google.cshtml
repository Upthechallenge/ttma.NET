@using Jmelosegui.Mvc.GoogleMap
@model String
@{
    ViewBag.Title = "google";
    Layout = "~/Views/Shared/_template.cshtml";

}


@(
    Html.GoogleMap()

      .Name("map")
        .Height(300)
        .Center(c => c.Address(Model))
        .Markers(m =>
    m.Add().Title(Model))
)
<form class="form-horizontal" role="form">
    <h4> Google Map Settings</h4>
    <div class="form-group">
        <label for="address" class="col-sm-2 control-label" style="white-space:
    nowrap;">Address:</label>
        <div class="col-sm-5">
            @Html.TextBox("address", Model, new
       {
           @class
    = "form-control",
           id = "address"
       })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Apply</button>

        </div>
    </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

</form>
<br />



@section scripts
    {
    @(Html.GoogleMap().ScriptRegistrar())

}


